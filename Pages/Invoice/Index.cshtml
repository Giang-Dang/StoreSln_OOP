@page
@model StoreSln_OOP.Pages.Invoice.IndexModel

<div class="border p-3 mt-4">
    <div class="pt-2">
        <h2 class="text-primary">Hóa Đơn Nhập Hàng</h2>
        <hr />
    </div>

    @if (Model.IsNotiActive)
    {
        <div class="pb-2">
            @foreach (var noti in Model.Notifications)
            {
                <li class="text-danger my-2 mx-3">@noti</li>
            }
        </div>
    }

    <div class="submit-form pt-2 pb-3 border">
        <form method="post">
            <div class="my-2">
                <label class="form-label mx-3" for="Name" style="width:100px;">Ngày giờ tạo: </label>
                <input class="" type="datetime-local" name="str_MinCreationDateTime" style="width:210px;"> -
                <input class="" type="datetime-local" name="str_MaxCreationDateTime" style="width:210px;">
                <button class="btn btn-primary mx-4" type="submit"><i class="bi bi-funnel-fill"></i> Tìm kiếm</button>                
            </div>
        </form>
    </div>
 
    <div class="pt-2 pb-4">
        <table class="table table-bordered table-striped" width="100%">
            <tr>
                <th>Mã hóa đơn nhập hàng</th>
                <th>Ngày giờ tạo</th>
                <th> </th>
            </tr>

            @foreach (var invoice in Model.Invoices)
            {
                <tr>
                    <td>@invoice.ID</td>
                    <td>@invoice.CreationDateTime.ToString()</td>
                    <td style="width:260px;">
                        <a asp-page="EditInvoice" asp-route-id="@invoice.ID"  class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Xem và Sửa
                        </a>
                        <a asp-page="DeleteInvoice" asp-route-id="@invoice.ID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="d-flex flex-row-reverse">
        <a asp-page="AddInvoice" asp-route-id="@Model.nextID" class="btn btn-primary"><i class="bi bi-plus-square"></i> Tạo hóa đơn mới</a>
    </div>
</div>