@page
@model StoreSln_OOP.Pages.Receipt.IndexModel

<div class="border p-3 mt-4">
    <div class="pt-2 pb-4">
        <h2 class="text-primary">Hóa Đơn Bán Hàng</h2>
        <hr />
    </div>
    <div class="submit-form pt-2 pb-4 border">
        <form method="post">
            <div class="mb-3">
                <label class="form-label mx-3" for="Name" style="width:100px;">Ngày giờ tạo: </label>
                <input class="" type="datetime-local" name="str_MinCreationDateTime" style="width:210px;"> -
                <input class="" type="datetime-local" name="str_MaxCreationDateTime" style="width:210px;">
                <button class="btn btn-primary mx-4" type="submit"><i class="bi bi-funnel-fill"></i> Tìm kiếm</button>                
            </div>
        </form>
    </div>
    @if(Model.IsNotiActive)
    {
        <div class="pt-2 pb-4 border">
            @foreach(var noti in Model.Notifications)
            {
                <li class="text-danger">@noti</li>
            }
        </div>
    }
    <div class="pt-2 pb-4">
        <table class="table table-bordered table-striped" width="100%">
            <tr>
                <th>Mã hóa đơn nhập hàng</th>
                <th>Ngày giờ tạo</th>
                <th> </th>
            </tr>

            @foreach (var receipt in Model.Receipts)
            {
                <tr>
                    <td>@receipt.ID</td>
                    <td>@receipt.CreationDateTime.ToString()</td>
                    <td style="width:260px;">
                        <a asp-page="EditReceipt" asp-route-id="@receipt.ID"  class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Xem và Sửa
                        </a>
                        <a asp-page="DeleteReceipt" asp-route-id="@receipt.ID" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="d-flex flex-row-reverse">
        <a asp-page="AddReceipt" asp-route-id="@Model.nextID" class="btn btn-primary"><i class="bi bi-plus-square"></i> Tạo hóa đơn mới</a>
    </div>
</div>