@page
@model StoreSln_OOP.Pages.BillRecord.EditBillRecordModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">@Model.Title</h2>
            <hr />
        </div>
        @if (Model.IsNotiActive)
        {
            <div class="mb-3 border">
                <ul>
                    @foreach (var noti in Model.Notifications)
                    {
                        if (noti != null)
                        {
                            <li class="text-danger">@noti</li>
                        }
                    }
                </ul>
            </div>
        }
        <div class="mb-3">
            <label for="Manufacturer" style="width:180px;">Mã hóa đơn: </label>
            <input disabled class="mw-50" style="width:210px;" type="text" name="ID" value="@Model.ID">
        </div>
        <div class="mb-3">
            <label for="Category" style="width:180px;">Tên mặt hàng: </label>
            <select class="mw-50" style="width:210px;" name="ProductID">
                @foreach (var p in Model.Products)
                {
                    <option value="@p.ID">@p.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="Manufacturer" style="width:180px;">Số lượng: </label>
            <input class="mw-50" style="width:210px;" type="text" name="ProductCount">
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Thêm</button>
        <a asp-page="./Invoices/AddInvoice" asp-route-id="@Model.ID" asp- class="btn btn-secondary">Trở về trang Nhập hóa đơn</a>
    </div>
</form>

